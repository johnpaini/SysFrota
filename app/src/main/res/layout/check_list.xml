<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:background="@color/colorLight"
    android:padding="8dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:text="@string/documentos" />

    <EditText
        android:id="@+id/edit_documentos"
        android:layout_width="300dp"
        android:layout_gravity="left"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="@string/luzes" />



    <EditText
        android:id="@+id/edit_luzes"
        android:layout_width="300dp"
        android:layout_marginTop="25sp"
        android:layout_gravity="left"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="@string/pneus" />



    <EditText
        android:id="@+id/edit_pneus"
        android:layout_width="300dp"
        android:layout_marginTop="25sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="@string/chave_roda" />



    <EditText
        android:id="@+id/edit_chave_roda"
        android:layout_width="300dp"
        android:layout_marginTop="25sp"
        android:layout_gravity="left"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="@string/estepe" />



    <EditText
        android:id="@+id/edit_estepe"
        android:layout_width="300dp"
        android:layout_marginTop="25sp"
        android:layout_gravity="left"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="@string/macaco" />



    <EditText
        android:id="@+id/edit_macaco"
        android:layout_width="300dp"
        android:layout_marginTop="25sp"
        android:layout_gravity="left"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="@string/lataria" />



    <EditText
        android:id="@+id/edit_lataria"
        android:layout_width="300dp"
        android:layout_marginTop="25sp"
        android:layout_gravity="left"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="@string/observacoes_gerais" />



    <EditText
        android:id="@+id/edit_observacoes_gerais"
        android:layout_width="300dp"
        android:layout_marginTop="25sp"
        android:layout_gravity="left"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:text="" />

    <Button
        android:id="@+id/button_inscrever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/colorAccent"
        android:onClick="submit"
        android:textColor="@color/colorLight"
        android:text="@string/inscrever" />


</LinearLayout>
</ScrollView>