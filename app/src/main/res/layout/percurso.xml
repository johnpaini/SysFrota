<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:background="@color/colorLight"
    android:padding="8dp"
    tools:context=".MainActivity">
<!--    Itinerario itinerario;-->
<!--    Usuario usuario;-->
<!--    Veiculo veiculo;-->
<!--    Date data;-->
<!--    Integer kmInicial, KmFinal, kmTotal;-->
<!--    String horaInicial, horaFinal;-->
<!--    Vistoria vistoria;-->
<!--    String MesAno;-->



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/Itinerario"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_itinerario"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/Veiculo"
        android:textSize="25sp" />


    <EditText
        android:id="@+id/edit_senha"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="25sp"
        android:inputType="numberPassword"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/data"
        android:textSize="25sp" />


    <EditText
        android:id="@+id/edit_data"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="25sp"
        android:inputType="date"
        android:text="" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/km_inicial"
        android:textSize="25sp" />


    <EditText
        android:id="@+id/edit_km_inicial"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="25sp"
        android:inputType="numberSigned"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/km_final"
        android:textSize="25sp" />


    <EditText
        android:id="@+id/edit_km_final"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="25sp"
        android:inputType="numberSigned"
        android:text="" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/hora_inicial"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edit_hora_inicial"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="25sp"
        android:inputType="numberSigned"
        android:text="" />

    <Button
        android:id="@+id/button_inscrever"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@color/colorAccent"
        android:onClick="submit"
        android:text="@string/inscrever"
        android:textColor="@color/colorLight" />

    <CalendarView
        android:id="@+id/calendarView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
</ScrollView>